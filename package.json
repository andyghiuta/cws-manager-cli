{
  "name": "cws-manager-cli",
  "version": "1.0.0",
  "description": "CLI tool for managing Chrome extensions in the Chrome Web Store",
  "repository": {
    "url": "https://github.com/andyghiuta/cws-manager-cli",
    "type": "git"
  },
  "files": [
    "dist",
    "README.md",
    "config.example.json"
  ],
  "main": "dist/index.js",
  "bin": {
    "cws-manager": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "prepare": "husky",
    "release": "release-it",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "chrome",
    "chrome-extension",
    "webstore",
    "cli",
    "google"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "release-it": "^19.0.5",
    "typescript": "^5.2.0"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
