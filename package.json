{
  "name": "cws-manager-cli",
  "version": "0.0.4",
  "description": "CLI tool for managing Chrome extensions in the Chrome Web Store",
  "repository": {
    "url": "https://github.com/andyghiuta/cws-manager-cli",
    "type": "git"
  },
  "files": [
    "dist",
    "README.md",
    "config.example.json"
  ],
  "main": "dist/index.js",
  "bin": {
    "cws-manager": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "prepare": "npm run build",
    "release": "commit-and-tag-version",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "chrome",
    "chrome-extension",
    "webstore",
    "cli",
    "google"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "commit-and-tag-version": "^12.6.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.0"
  },
  "commit-and-tag-version": {
    "writerOpts": {
      "commitsSort": false
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Other"
      },
      {
        "type": "docs",
        "section": "Docs"
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  }
}